DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n_user
# Starkes Passwort via Docker Secret (Best Practice)
DB_POSTGRESDB_PASSWORD_FILE=/run/secrets/pg_pw
# Connection Pooling fÃ¼r >50k Runs/Tag
DB_POSTGRESDB_MAX_POOL_SIZE=8
# SSL aktivieren wenn DB auf eigene VM wandert (Phase A)
DB_POSTGRESDB_SSL_ENABLED=false
DB_PING_INTERVAL_SECONDS=2
