# UnityAI Platform - Production Configuration Template
# Copy this file to .env in the root directory and fill in your values
# Remove the # comments and replace the placeholder values with your actual configuration

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Domain Configuration
# Your production domain (e.g., unityai.yourdomain.com)
DOMAIN=your-domain.com

# SSL Configuration
# Set to 'true' for HTTPS, 'false' for HTTP (not recommended for production)
SSL_ENABLED=true

# Environment
ENVIRONMENT=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
POSTGRES_DB=unityai_prod
POSTGRES_USER=unityai_user
POSTGRES_PASSWORD=saklsjdf2980374=(/)sldfkhjdfsjklö
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL (will be auto-generated from above settings)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=saklsjdf2980374=(/)sldfkhjdfsjklös
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key (generate a strong random key)
JWT_SECRET_KEY=your-jwt-secret-key-min-32-characters

# API Keys
API_KEY=your-api-key
ADMIN_API_KEY=your-admin-api-key

# Session Secret
SESSION_SECRET=your-session-secret-key

# =============================================================================
# N8N CONFIGURATION
# =============================================================================

# N8N Settings
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-n8n-password

# N8N Database
N8N_DB_TYPE=postgresdb
N8N_DB_POSTGRESDB_HOST=postgres
N8N_DB_POSTGRESDB_PORT=5432
N8N_DB_POSTGRESDB_DATABASE=n8n_prod
N8N_DB_POSTGRESDB_USER=n8n_user
N8N_DB_POSTGRESDB_PASSWORD=your-n8n-db-password

# N8N Encryption Key
N8N_ENCRYPTION_KEY=your-n8n-encryption-key

# N8N Webhook URL
N8N_WEBHOOK_URL=https://${DOMAIN}/n8n/webhook

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@${DOMAIN}

# =============================================================================
# EXTERNAL API KEYS (Optional)
# =============================================================================

# OpenAI API Key (if using AI features)
OPENAI_API_KEY=your-openai-api-key

# Other API Keys
GOOGLE_API_KEY=your-google-api-key
SLACK_BOT_TOKEN=your-slack-bot-token
DISCORD_BOT_TOKEN=your-discord-bot-token

# =============================================================================
# MONITORING & LOGGING (Optional)
# =============================================================================

# Log Level
LOG_LEVEL=INFO

# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes

# =============================================================================
# DOCKER SWARM CONFIGURATION
# =============================================================================

# Swarm Node Labels (for service placement)
NODE_ROLE=manager

# Replicas
APP_REPLICAS=2
WORKER_REPLICAS=2
N8N_REPLICAS=1

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# S3 Backup Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-backup-bucket
AWS_REGION=us-east-1