# n8n API Playground - Environment Configuration
# Copy this file to .env and adjust the values for your environment

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Application environment (development, testing, staging, production)
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=true

# Enable testing mode (true/false)
TESTING=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Number of worker processes
SERVER_WORKERS=1

# Enable auto-reload in development (true/false)
SERVER_RELOAD=true

# Enable access logging (true/false)
SERVER_ACCESS_LOG=true

# Use colored output (true/false)
SERVER_USE_COLORS=true

# Event loop type (asyncio, uvloop)
SERVER_LOOP=asyncio

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type (sqlite, postgresql, mysql)
DB_TYPE=sqlite

# Database connection details (for PostgreSQL/MySQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=n8n_playground
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Enable SQL query logging (true/false)
DB_ECHO=false

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache type (memory, redis, memcached)
CACHE_TYPE=memory

# Redis connection details (if using Redis)
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=
CACHE_DB=0

# Cache connection settings
CACHE_MAX_CONNECTIONS=10
CACHE_TIMEOUT=5
CACHE_DEFAULT_TTL=3600

# =============================================================================
# N8N API CONFIGURATION
# =============================================================================

# n8n instance URL
N8N_API_BASE_URL=http://localhost:5678

# n8n API authentication (use either API key or username/password)
N8N_API_KEY=your_n8n_api_key_here
N8N_USERNAME=your_n8n_username
N8N_PASSWORD=your_n8n_password

# API client settings
N8N_API_TIMEOUT=30
N8N_API_MAX_RETRIES=3
N8N_API_RETRY_DELAY=1.0
N8N_API_VERIFY_SSL=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for JWT tokens (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production

# JWT algorithm
ALGORITHM=HS256

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password policy
PASSWORD_MIN_LENGTH=8

# Login security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# CORS settings (comma-separated list)
CORS_ORIGINS=*

# Trusted hosts (comma-separated list, optional)
TRUSTED_HOSTS=

# =============================================================================
# MODULE CONFIGURATION
# =============================================================================

# Enable/disable modules (true/false)
MODULE_WORKFLOW_AUTOMATION_ENABLED=true
MODULE_FASTAPI_INTEGRATION_ENABLED=true
MODULE_MONITORING_ENABLED=true
MODULE_USER_MANAGEMENT_ENABLED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json, text)
LOG_FORMAT=json

# Log file path (optional, logs to console if not set)
LOG_FILE_PATH=

# Log file rotation settings
LOG_MAX_FILE_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Enable Prometheus metrics (true/false)
ENABLE_METRICS=true

# Metrics endpoint path
METRICS_PATH=/metrics

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# WORKFLOW AUTOMATION CONFIGURATION
# =============================================================================

# Workflow execution settings
WORKFLOW_MAX_CONCURRENT_EXECUTIONS=10
WORKFLOW_EXECUTION_TIMEOUT=300
WORKFLOW_RETRY_ATTEMPTS=3
WORKFLOW_RETRY_DELAY=5

# Template settings
WORKFLOW_TEMPLATE_CACHE_TTL=3600
WORKFLOW_TEMPLATE_VALIDATION=true

# =============================================================================
# FASTAPI INTEGRATION CONFIGURATION
# =============================================================================

# Webhook settings
WEBHOOK_BASE_URL=http://localhost:8080
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30

# API integration settings
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60

# =============================================================================
# USER MANAGEMENT CONFIGURATION
# =============================================================================

# User registration settings
USER_REGISTRATION_ENABLED=true
USER_EMAIL_VERIFICATION_REQUIRED=false
USER_ADMIN_APPROVAL_REQUIRED=false

# Session settings
SESSION_TIMEOUT_MINUTES=60
SESSION_CLEANUP_INTERVAL=300

# Email settings (for notifications)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_USE_TLS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development tools
DEV_RELOAD_DIRS=./core,./modules
DEV_RELOAD_INCLUDES=*.py
DEV_RELOAD_EXCLUDES=*.pyc,__pycache__

# Testing settings
TEST_DATABASE_URL=sqlite:///./test.db
TEST_CACHE_URL=memory://

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production-specific settings (uncomment and configure for production)
# ENVIRONMENT=production
# DEBUG=false
# DB_TYPE=postgresql
# CACHE_TYPE=redis
# LOG_LEVEL=WARNING
# SERVER_WORKERS=4
# CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
# TRUSTED_HOSTS=yourdomain.com,api.yourdomain.com

# =============================================================================
# DOCKER SETTINGS
# =============================================================================

# Docker-specific environment variables
# POSTGRES_DB=n8n_playground
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# REDIS_URL=redis://redis:6379/0
# N8N_API_BASE_URL=http://n8n:5678

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Prometheus (if using external instance)
# PROMETHEUS_URL=http://prometheus:9090

# Grafana (if using external instance)
# GRAFANA_URL=http://grafana:3000
# GRAFANA_API_KEY=your_grafana_api_key

# Sentry (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom environment variables here
# CUSTOM_SETTING=value