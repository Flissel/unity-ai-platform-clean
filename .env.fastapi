# Unity AI FastAPI Bridge - Environment Configuration

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_DB=0

# n8n API Configuration
N8N_API_URL=https://n8n.unit-y-ai.io/api/v1
N8N_API_KEY=your-n8n-api-key-here
N8N_WEBHOOK_URL=https://n8n.unit-y-ai.io/webhook

# Autogen Configuration
AUTOGEN_ENABLED=true
AUTOGEN_MODEL=gpt-4o
# OpenAI API Key for AutoGen Core
OPENAI_API_KEY=your-openai-api-key-here

# FastAPI Configuration
FASTAPI_ENV=production
FASTAPI_DEBUG=false
FASTAPI_WORKERS=1
FASTAPI_LOG_LEVEL=info

# Security
CORS_ORIGINS=*
API_KEY_HEADER=X-API-Key
API_KEY=

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/logs/fastapi.log

# Webhook Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRIES=3
WEBHOOK_RETRY_DELAY=5

# Queue Configuration
QUEUE_MAX_SIZE=1000
QUEUE_TIMEOUT=300
WORKER_CONCURRENCY=10